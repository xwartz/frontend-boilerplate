{
  "apps": [{
    "name": "hot-server",
    "script": "npm",
    "args": ["run", "dev"],
    "watch": ["./hot-server.js", "./webpack.config.dev.js"],
    "node_args": "",
    "merge_logs": true,
    "log_file": "logs/client-dev.log",
    "error_file": "logs/client-dev-err.log",
    "out_file": "logs/client-dev-out.log",
    "pid_file": "logs/client-dev.pid",
    "env": {
      "NODE_ENV": "development"
    }
  }]
}
